---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <header class="header">
    <div class="logo">
      <img src="#" alt="RecreadeCode" />
    </div>
    <nav class="navbar">
      <ul>
        <li><a href="Explorar">Explorar</a></li>
        <li><a href="Planes">Planes</a></li>
        <li><a href="Qsms">¿Quiénes somos?</a></li>
        <li>
          <a href="carrito" class="cart-icon">
            <i class="fas fa-shopping-cart"> </i>
          </a>
        </li>
        <li><a href="login" class="login-btn" id="login-btn">Acceder</a></li>
      </ul>
    </nav>
  </header>

  <section class="hero">
    <h1>Academia Tecnológica del Perú</h1>
    <p>
      Organización de educación en tecnología y crecimiento personal para niños
      y jóvenes.
    </p>
    <br />
    <input
      type="text"
      class="search-bar"
      placeholder="¿Qué curso aprenderás hoy?"
    />
  </section>

  <section class="courses">
    <h2>Explora nuestros cursos destacados</h2>
    <div class="course-card">
      <h3>Aprende a crear páginas web</h3>
      <button class="course-btn">Empezar curso</button>
    </div>
    <div class="course-card">
      <h3>Programación con Python</h3>
      <button class="course-btn">Empezar curso</button>
    </div>
    <div class="course-card">
      <h3>Inteligencia Artificial</h3>
      <br />
      <button class="course-btn">Empezar curso</button>
    </div>
  </section>

  <section class="programming-languages">
    <h2>Conoce nuestros lenguajes de programación</h2>
    <div class="languages">
      <div class="language">
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/61/HTML5_logo_and_wordmark.svg/1200px-HTML5_logo_and_wordmark.svg.png"
          alt="HTML"
        />
        <p>Html</p>
      </div>
      <div class="language">
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/99/Unofficial_JavaScript_logo_2.svg/800px-Unofficial_JavaScript_logo_2.svg.png"
          alt="JavaScript"
        />
        <p>JavaScript</p>
      </div>
      <div class="language">
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/d/d5/CSS3_logo_and_wordmark.svg"
          alt="CSS"
        />
        <p>css</p>
      </div>
    </div>
  </section>

  <footer class="footer">
    <p>© 2024 RecreadeCode</p>
  </footer>
</Layout>

<script>
  const loginBtn = document.querySelector(
    '#login-btn',
  ) as HTMLAnchorElement | null
  if (loginBtn) {
    const userLogged = JSON.parse(localStorage.getItem('token') ?? '')
    if (userLogged !== '') {
      loginBtn.innerHTML = 'Ver perfil'
      loginBtn.href = '/profile'
    } else {
      loginBtn.innerHTML = 'Acceder'
      loginBtn.href = '/login'
    }
  }
</script>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: #333; /* Ajusta según el estilo de tu cabecera */
  }

  .navbar ul {
    display: flex;
    list-style: none;
    gap: 20px; /* Espacio entre los elementos del menú */
  }

  .navbar ul li a {
    text-decoration: none;
    color: white;
    font-size: 16px;
  }

  .cart-icon {
    background-color: #28a745; /* Color verde */
    border-radius: 50%; /* Forma circular */
    width: 40px; /* Tamaño del ícono circular */
    height: 40px; /* Tamaño del ícono circular */
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  .cart-icon i {
    color: white; /* Color del ícono */
    font-size: 20px; /* Tamaño del ícono */
  }

  /* Barra de navegación */
  .navbar {
    background-color: #0a0a0a;
    padding: 15px;
    position: relative;
    top: -50px;
    opacity: 0;
    display: flex;
    justify-content: flex-end;
    animation: slideDown 2s ease forwards;
  }

  .navbar ul {
    list-style: none;
    display: flex;
    gap: 20px;
  }

  .navbar ul li a {
    color: #ffffff;
    text-decoration: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    position: relative;
    z-index: 1;
    transition: color 0.5s ease;
  }

  .navbar ul li a:hover {
    color: #00ffff;
  }

  .login-btn {
    background-color: #ff0066;
    padding: 10px 20px;
    border-radius: 5px;
    position: relative;
    z-index: 1;
    transition:
      background-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .login-btn:hover {
    background-color: #ff3385;
    box-shadow: 0 0 15px rgba(255, 51, 133, 0.7);
  }

  /* Efecto RGB lento en los bordes */
  .navbar ul li a:before,
  .login-btn:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, #ff0000, #00ff00, #0000ff, #ff00ff);
    background-size: 400%;
    z-index: -1;
    filter: blur(8px);
    border-radius: 5px;
    opacity: 0;
    transition:
      opacity 0.5s ease,
      background-position 5s ease;
  }

  .navbar ul li a:hover:before,
  .login-btn:hover:before {
    opacity: 1;
    background-position: 200%;
  }

  /* Animación de aparición lenta de la barra */
  @keyframes slideDown {
    0% {
      top: -50px;
      opacity: 0;
    }
    100% {
      top: 0;
      opacity: 1;
    }
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
  }

  body {
    background: linear-gradient(135deg, #0f0f0f, #1d1f27);
    color: #ffffff;
    text-align: center;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: #0a0a0a;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.6);
  }

  .navbar ul {
    list-style: none;
    display: flex;
    gap: 15px;
  }

  .navbar ul li a {
    color: #ffffff;
    text-decoration: none;
    padding: 10px 20px;
    transition: color 0.3s;
  }

  .navbar ul li a:hover {
    color: #00ffff;
  }

  .login-btn {
    background-color: #ff0066;
    border-radius: 5px;
    padding: 10px 20px;
    transition: background-color 0.3s ease;
  }

  .login-btn:hover {
    background-color: #ff3385;
    box-shadow: 0 0 15px rgba(255, 51, 133, 0.7);
  }

  /* Hero section */
  .hero {
    padding: 60px 20px;
    background: url('background.jpg') no-repeat center center / cover;
    color: #ffffff;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 10px;
  }

  .search-bar {
    padding: 10px;
    width: 300px;
    border-radius: 10px;
    border: 2px solid #00ffff;
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
  }

  /* Courses section */
  .courses {
    padding: 40px 20px;
    background-color: #141418;
  }

  .courses h2 {
    margin-bottom: 20px;
    color: #00ffff;
  }

  .course-card {
    background-color: #1e1f26;
    border-radius: 10px;
    margin: 15px;
    padding: 20px;
    width: 250px;
    display: inline-block;
    transition: transform 0.3s ease;
    position: relative;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
  }

  .course-card:hover {
    transform: scale(1.05);
  }

  .course-btn {
    background-color: #ff0066;
    color: #ffffff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    position: relative;
    z-index: 1;
    transition:
      background-color 0.3s,
      box-shadow 0.3s ease;
  }

  .course-btn:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, #ff0000, #00ff00, #0000ff, #ff00ff);
    background-size: 400%;
    z-index: -1;
    filter: blur(15px);
    border-radius: 5px;
    opacity: 0;
    transition:
      opacity 0.3s,
      background-position 0.6s;
  }

  .course-btn:hover {
    background-color: #ff3385;
    box-shadow: 0 0 20px rgba(255, 0, 102, 0.6);
  }

  .course-btn:hover:before {
    opacity: 1;
    background-position: 200%;
  }

  /* Programming languages */
  .languages {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }

  .language {
    margin: 15px;
    text-align: center;
    transition: transform 0.3s;
  }

  .language img {
    width: 80px;
    height: 80px;
    filter: drop-shadow(0 0 10px rgba(0, 255, 255, 0.7));
  }

  .language:hover {
    transform: translateY(-10px);
  }

  .footer {
    padding: 20px;
    background-color: #0a0a0a;
    color: #ffffff;
  }

  .language img {
    width: 80px;
    height: 80px;
    filter: drop-shadow(0 0 10px rgba(0, 255, 255, 0.7));
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
  }

  .language:hover img {
    transform: scale(1.1);
    filter: drop-shadow(0 0 15px rgba(0, 255, 255, 1));
  }

  .course-card {
    transition: border 0.3s ease;
  }

  .course-card[style*='border'] {
    animation: glow 1s infinite alternate;
  }

  @keyframes glow {
    0% {
      border-color: #00ff00;
    }
    100% {
      border-color: #00cc00;
    }
  }
</style>
